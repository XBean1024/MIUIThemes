<?xml version="1.0" encoding="utf-8"?>
         
<Icon version="1" frameRate="1" width="180" height="180" screenWidth="1080" useVariableUpdater="DateTime">
    <Group>
        <!--背景-->
        <Image x="90" y="90" align="center" alignV="center" src="clock.png" />
        <!--时针 -->
        <Image x="90" y="90" align="center" alignV="center" pivotX="8" pivotY="101" src="hour.png" angle="#hour12*30+#minute/2"/>
        <!--分针-->
        <Image x="90" y="90" align="center" alignV="center" pivotX="8" pivotY="101" src="minute.png" angle="#minute*6+#second/10"/>
        <!--秒针-->
        <Image x="90" y="90" align="center" alignV="center" pivotX="8" pivotY="101" src="second.png" angle="#second*6"/>
		<!--点-->
		<Image x="90" y="90" align="center" alignV="center" src="dian.png"/>
    </Group>    
</Icon>
